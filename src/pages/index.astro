---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="kS">
  <main
    class="bg-black min-h-screen flex justify-center items-center px-24 py-16"
  >
    <section
      class="flex justify-between polka-background items-center w-full relative z-20"
    >
      <div class="flex flex-col">
        <h1 class="font-misto text-7xl">Hello, <br /> I'm Kostiantyn</h1>
        <div class="flex w-full justify-between">
          <h3 class="font-misto">###</h3>
          <h3 class="font-agra text-xl">Frontend Developer</h3>
        </div>
        <div class="flex w-full justify-between">
          <h3 class="font-agra text-lg">based in New Jersey</h3>
          <h3 class="font-misto">///</h3>
        </div>
      </div>
    </section>
    <img src="/assets/picofme.svg" class="z-20 h-96" />
    <div class="polka z-10"></div>
    <div class="paper z-[5]"></div>
  </main>
</Layout>
<style>
  .polka {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #000000;
    opacity: 1;
    background-image: radial-gradient(#ffffff88 0.5px, transparent 0.5px),
      radial-gradient(#ffffffcc 0.5px, #000000 0.5px);
    background-size: 30px 30px;
    background-position: 0 0, 15px 15px;
    clip-path: polygon(48% 0%, 74% 0%, 100% 27%, 100% 71%, 14% 100%, 4% 100%);
  }

  .paper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #000000;
    opacity: 0.1;
    background-image: linear-gradient(#ffffff 1px, transparent 1px),
      linear-gradient(90deg, #ffffff 1px, transparent 1px),
      linear-gradient(#ffffff 0.5px, transparent 0.5px),
      linear-gradient(90deg, #ffffff 0.5px, #000000 0.5px);
    background-size: 200px 200px, 200px 200px, 40px 40px, 40px 40px;
    background-position: -1px -1px, -1px -1px, -0.5px -0.5px, -0.5px -0.5px;
  }
</style>
