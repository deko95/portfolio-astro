---
export interface Props {
  title: string;
  content: string;
  tags: string[];
}

const { title, content, tags } = Astro.props;
---

<li
  class="border border-black shadow-lg rounded-md p-4 flex flex-col gap-4 bg-gray-50"
>
  <h2 class="text-2xl font-bold">
    {title}
  </h2>
  <p>
    {content}
  </p>
  <ul class="flex gap-4 justify-end">
    {tags?.map((tag) => <li class="italic">{tag}</li>)}
  </ul>
</li>
